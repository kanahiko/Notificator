        <Label x:Name="label" Content="1" HorizontalAlignment="Left" Margin="18,60,0,0" VerticalAlignment="Top"/>
        <Label x:Name="labelMax" Content="10" HorizontalAlignment="Left" Margin="232,60,0,0" VerticalAlignment="Top"/>
